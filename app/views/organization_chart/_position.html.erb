<div class="position">
    <h3><%= position.title_en %></h3>
    <% position.users.each do |user| %>
        <div class="user <%= "has_facebook" if user.facebook_id %>">
            <% if user.facebook_id %>
                <img class="pull-left" src="http://graph.facebook.com/<%= user.facebook_id %>/picture">
            <% else %>
                <img class="pull-left" src="http://profile.ak.fbcdn.net/static-ak/rsrc.php/v1/yo/r/UlIqmHJn-SK.gif">
            <% end %>
            <p><%= link_to user.full_name, user_path(user) %></p>
        </div>
    <% end %>
</div>
