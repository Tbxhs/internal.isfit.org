<%= form_for @album do |f| %>
  <fieldset>
    <table>
      <tr>
        <td>Title</td>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><%= f.text_field :description  %></td>
      </tr>
	</table>
  </fieldset>
  <%= f.submit class: "primary btn" %>
<% end %>