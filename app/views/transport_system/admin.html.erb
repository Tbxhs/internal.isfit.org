<div class="row">
	<h2>Sjåfører</h2>
	<div class="span6">
		<table id="drive_table_overview" class="table table-condensed table-striped">
			<% @drivers.each do | driver | %>
				<tr>
					<td><%= User.find(driver.user_id).given_name %> </td>
					<td><%= link_to "Oppdrag", {:controller => "transport_system", :action => "todo_user", :id => driver.id} %></td>
					<td><%= link_to "Vaktliste", {:controller => "driver_shifts", :action => "index", :driver_id => driver.id} %></td>
				</tr>
			<% end %>
		</table>
	</div>
	<div class="span3">
		<h3>Legg til sjåfør</h3>
		<%= form_tag(:controller => "transport_system", :action => "admin_add_driver", :method => "post") do %>
			Brukernavn: <br>
			<%= text_field_tag(:username) %><br>
			<%= submit_tag("Lagre") %>
		<% end %>
	</div>
</div>
<hr>
<div class="row">
	<h2>Biler</h2>
	<div class="span6">
		<table id="car_table_overview" class="table table-condensed table-striped">
			<thead>
				<th>ID</th>
				<th>Navn</th>
				<th>Beskrivese</th>
				<th>Plass</th>
				<th>Seter</th>
			</thead>
			<tbody>
				<% @cars.each do |car| %>
				<tr>
					<td><%= car.id%></td>
					<td><%= car.name%></td>
					<td><%= car.description%></td>
					<td><%= car.space%></td>
					<td><%= car.seats%></td>
					<td><%= link_to "Fjern", {:controller => "transport_system", :action => "admin_destroy_car", :id => car.id, method: :delete}, {:class =>('delete_car')} %></td>
					<td><a href="#">Rediger</a></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="span3">
		<h3>Legg til bil</h3>	
		<%= form_for Car.new, :url=> { :action => "admin_create_car" } do |f| %>
			Navn:<br> <%= f.text_field :name %><br>
			Beskrivelse:<br> <%= f.text_field :description %><br>
			Plass: <br> <%= f.text_field :space %><br>
			Seter: <br> <%= f.text_field :seats %><br>
			<%= submit_tag("Lagre") %>
		<% end %>
	</div>
</div>


