<%= form_for(@static_page) do |f| %>
  <%= f.error_messages %> 
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "title" %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="type-button">
    <%= f.submit :class => "primary btn" %>
  </div>
<% end %>
