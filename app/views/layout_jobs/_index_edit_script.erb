<% content_for :script do %>
  <script>
    $(document).ready(function() {
      $('.edit').editable('<%= "#{receive_edit_layout_jobs_url.to_s}" %>')
    });
  </script>
  <script>
    $(document).ready(function() {
      $('.edit_area').editable('<%= "#{receive_edit_layout_jobs_url.to_s}" %>', {
        type      : 'textarea',
        submit    : 'OK',
        tooltip   : 'Click to edit...',
        height    : "75px",
        data      : function(value, settings) {
          console.log(unescape(value));
          console.log(settings);
          return value;
        },
        onedit    : function() {
          $('.description').toggleClass('span3 span8');
          $('.edit_area').toggleClass('layout-jobs-description');
          $('.hider').hide();
        },
        oncancel    : function() {
          $('.edit_area').toggleClass('layout-jobs-description');
          $('.description').toggleClass('span3 span8');
          $('.hider').show();
        },
        onsubmit    : function() {
          $('.description').toggleClass('span3 span8');
          $('.edit_area').toggleClass('layout-jobs-description');
          $('.hider').show();
        },
        onreset :  function() {
          $('.description').toggleClass('span3 span8');
          $('.edit_area').toggleClass('layout-jobs-description');
          $('.hider').show();
        },
        submitdata: {
          authenticity_token: '<%= j(form_authenticity_token) %>'
        },
      });
    });    
  </script>
  <script>
    $(document).ready(function() {
      $('.editable').editable('<%= "#{receive_edit_layout_jobs_url.to_s}" %>', {
        data   : '<%= raw LayoutJob.users_json %>',
        type   : 'select',
        submit : 'OK',
        cancel : 'Canc',
        submitdata: {
          type: 'owner',
          authenticity_token: '<%= j(form_authenticity_token) %>'
        },
      });
    });
  </script>
  <script>
    $(document).ready(function() {
      $('.status_editable').editable('<%= "#{receive_edit_layout_jobs_url.to_s}" %>', {
        data   : '<%= raw LayoutJob.status_options_json %>',
        type   : 'select',
        submit : 'OK',
        submitdata: {
          type: 'status',
          authenticity_token: '<%= j(form_authenticity_token) %>'
        },
      });
    });
  </script>
<% end %>
