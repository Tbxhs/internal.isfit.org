<div class="pull-right">
  <%= link_to 'New Layout job', new_layout_job_path, :class => "btn btn-primary"%>
</div>

<% if current_user.role?(:layout) || current_user.role?(:admin) %>
  <%= render 'index_edit_script' %>
<% end %>

<h1>Your Layout jobs</h1>
<div class="container-fluid">
  <table class="table table-bordered table-condensed sortable">
    <thead>
      <th class="span1 hider">Status</th>
      <th class="span1 hider">Deadline</th>
      <th class="span1 hider">Owner</th>
      <th class="span1 hider">Title</th>
      <th class="span1 hider">Nr</th>
      <th class="span3 description">Description</th>
      <th class="span1">Group</th>
      <th class="span1">Contact</th>
    </thead>

    <% @layout_jobs.each do |layout_job| %>
      <tr>
        <td class="<%= layout_job.status_color %> hider"><div class="status_editable" id="<%= layout_job.id %>"><%= layout_job.status_name %></div></td>
        <td class="hider"><%= layout_job.deadline %></td>
        <td class="hider" style="background-color: <%= layout_job.color %>"><div class="editable" id="<%= layout_job.id %>"><%= layout_job.owner %></div></td>
        <td class="hider"><%= link_to layout_job.work_title, layout_job %></td>
        <td class="hider"><%= layout_job.number %></td>
        <td><div class="edit_area layout-jobs-description"><%= simple_format truncate(layout_job.description, length: 400, omission: "...") %></div></td>
        <td><%= layout_job.group.name_en %></td>
        <td><%= link_to User.find(layout_job.user_id).full_name ,user_path(layout_job.user_id) %></td>
      </tr>
    <% end %>
  </table>
</div>
