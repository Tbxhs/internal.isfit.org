<h1>What I am?!</h1>
<a href="highscore" class="btn btn-large btn-info">Highscores</a>

<div id="what_question" class="what_seperate">    
<% @users.each do |user| %>
    <% if user.id == @whatGame.correct_user_id %>
        <legend> Hvem har tittelen: <strong><%= user.positions.last.title_no %></strong></legend>
    <% end %>
<% end %>
</div>

<% @btn_classes = ["btn", "btn-primary", "btn-info", "btn-success", "btn-warning", "btn-danger", "btn-inverse"] %>

<div id="what_guesses" class="what_seperate">
<% @users.each_with_index do |user,index| %>
    <% if index == 2 %>
    <br>
    <% end %>
    <form method="POST" >
        <%= form_tag %>
        <input type="hidden" name="whatGame" value="<%= @whatGame.id %>">
        <input type="hidden" name="user_id" value="<%= user.id %>">
        <input class="span3 btn btn-large <%= @btn_classes.sample %>" type="submit" name="user_name" value="<%= user.full_name %>">
    </form>
<% end %>
</div>

