<div class="pull-right">
  <%= link_to 'Edit', edit_participant_path(@participant), :class => "btn" %>
  <%= link_to 'Back', participants_path, :class => "btn" %>
</div>

<p>
  <b>Name:</b>
  <%= "#{@participant.first_name} #{@participant.last_name}" %>
</p>

<p>
  <b>Address:</b>
  <%= @participant.address1 %>
</p>

<p>
  <b>Zipcode:</b>
  <%= @participant.zipcode %>
</p>

<p>
  <b>City:</b>
  <%= @participant.city %>
</p>

<p>
  <b>Country:</b>
  <%= @participant.country.name %>
</p>

<p>
  <b>Phone:</b>
  <%= @participant.phone %>
</p>

<p>
  <b>E-mail:</b>
  <%= @participant.email %>
</p>

<p>
  <b>Birthdate:</b>
  <%= @participant.birthdate %>
</p>

<p>
  <b>Sex:</b>
  <%= @participant.sex == "f" ? "female" : "male" %>
</p>

<p>
  <b>University:</b>
  <%= @participant.university %>
</p>

<p>
  <b>Field of Study:</b>
  <%= @participant.field_of_study %>
</p>

<p>
  <b>Workshop 1:</b>
  <%= Workshop.find_by_id(@participant.workshop1).name %>
</p>

<p>
  <b>Workshop 2:</b>
  <%= Workshop.find_by_id(@participant.workshop2).name %>
</p>

<p>
  <b>Workshop 3:</b>
  <%= Workshop.find_by_id(@participant.workshop3).name %>
</p>

<p>
  <b>General essay:</b>
  <%= @participant.essay1 %>
</p>

<p>
  <b>Workshops:</b>
  <%= @participant.essay2 %>
</p>

<p>
  <b>Travel apply:</b>
  <%= @participant.travel_apply == 1 ? "yes" : "no" %>
</p>

<p>
  <b>Travel support essay:</b>
  <%= @participant.travel_essay %>
</p>

<p>
  <b>Travel amount:</b>
  <%= @participant.travel_amount %>
</p>

<p>
  <b>Other travel support:</b>
  <%= @participant.travel_nosupport_other == 1 ? "yes" : "no" %>
</p>

<p>
  <b>Can still attend:</b>
  <%= @participant.travel_nosupport_cancome == 1 ? "yes" : "no" %>
</p>

