<!DOCTYPE html>
<html>
  <head>
    <title><%#= content_for?(:title) yield(:title) : "ISFiT Internal" %>ISFiT Internal</title>
    <meta name="description" content="The intranet of ISFiT">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- http://twitter.github.com/bootstrap/  stylesheet -->
    <link href="/stylesheets/bootstrap/bootstrap-2.0.0.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap/bootstrap-responsive-2.0.0.css" rel="stylesheet">

    <%= stylesheet_link_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="fb-root"></div>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '111446192243028', // App ID
          channelUrl : '//internal.isfit.org/channel.html', // Channel File
          status     : true, // check login status
          cookie     : true, // enable cookies to allow the server to access the session
          xfbml      : true  // parse XFBML
        });

        // Additional initialization code here
      };

      // Load the SDK Asynchronously
      (function(d){
        var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
        js = d.createElement('script'); js.id = id; js.async = true;
        js.src = "//connect.facebook.net/en_US/all.js";
        d.getElementsByTagName('head')[0].appendChild(js);
      }(document));
    </script>

    <!-- navbar starts here -->
    <div id="navbar" class="navbar navbar-fixed-top"> 
      <div class="navbar-inner"> 
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <%= link_to "ISFiT Internal", root_path, :class => :brand %>
          <div class="nav-collapse">
         </div> <!-- end nav-collapse -->
        </div> <!-- end container -->
      </div> <!-- end navbar-inner -->
    </div> <!-- end navbar -->

    <div class="container">
      <div class="row">
        <div id="content" class="span12">
          <div>
            <% if notice or alert %>
              <div class="alert alert-<%= notice ? "success":"error" %>">
                <a href="#" class="close" data-dismiss="alert">x</a>
                <i class="icon-<%= notice ? "success":"warning-sign" %>"></i> <strong><%= notice ? notice : alert %></strong>
              </div>
            <% end %>
            <%= content_tag :h1, yield(:title) if show_title? %>
            <%= yield %>
          </div>

        </div>
      </div>
    </div>
    <!--Script at bottom for fast page load -->
    <%= yield :script %>

    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-18016792-4']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
</script>
       </body>
     </html>
