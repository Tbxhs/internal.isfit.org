<h1>Contact organizations</h1>

<div class="contact-log-unit">
  <p>  <%= link_to "Register new organization", new_contact_log_unit_path, :class => "primary btn" %></p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Organization name</th>
        <th></th>
      </tr>
    </thead>
    <% for contact_log_unit in @contact_log_units %>
    <tr class=<%= contact_log_unit.css_class %>>
      <td><%= contact_log_unit.company_name %></td>
      <td width="90px">
        <div class="btn-group">
          <%= link_to("Show", contact_log_unit, class: "btn btn-info") %>
          <a href="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Edit", edit_contact_log_unit_path(contact_log_unit) %></li>
            <li><%= link_to("Delete", contact_log_unit,  method: :delete, confirm: 'Are you sure you want to delete this contact log unit?') %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
