<%= bootstrap_form_for(@contact_log) do |f| %>
  <%= f.error_messages %>
  <%= f.fieldset "contact_log" do %>
    <%= f.collection_select :contact_log_person_id, @contact_log_unit.contact_log_people, :id, :full_name, :prompt=> "Please select or add a new person" %>
    <div id="contact_log_person">
      <p>
        <%= label :contact_log_person, :first_name %>
        <%= text_field :contact_log_person, :first_name %>
      </p>
      <p>
        <%= label :contact_log_person, :last_name %>
        <%= text_field :contact_log_person, :last_name %>
      </p>
       <p>
        <%= label :contact_log_person, :last_name %>
        <%= text_field :contact_log_person, :last_name %>
      </p>        
      <p>
        <%= label :contact_log_person, :last_name %>
        <%= text_field :contact_log_person, :last_name %>
      </p>   
      <%= hidden_field :contact_log_person, :contact_log_unit_id, :value => @contact_log_unit.id.to_s %>
    </div>
    <%= f.text_area :content , class: "span6"%>
    <% end %>
  <%= f.submit "Submit", class: "btn" %>
<% end %>
