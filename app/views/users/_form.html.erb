<%= bootstrap_form_for @user do |f| %>
  <%= f.error_messages %>

  <%= f.fieldset "Personal information" do %>
    <%= f.text_field :given_name %>
    <%= f.text_field :family_name %>
    <%= f.text_field :phone %>
    <%= f.text_field :private_email %>
    <%= f.text_field :twitter_username %>
    <%= f.text_field :address %>
    <%= f.text_field :postal_code %> 
    <%= f.text_field :city %>
  <% end %>

  <fieldset>
    <legend>Education</legend>
    <%= f.text_field :study %>
  </fieldset>
  <fieldset>
    <legend>Tasks</legend>
    <%= f.text_area :tasks, size: "10x10" %>

  </fieldset>

  <fieldset>
    <legend>Administration</legend>
    <%= f.text_field :cardnumber_ntnu,"hint-title"=>"NTNU cardnumber", "hint-content"=>"Your NTNU cardnumber is the six digits right next to the 'NTNU' at the back of the card."%>
    <%= f.text_field :cardnumber_samfundet, "hint-title" => "Samfundet cardnumber", "hint-content" => "Your samfundet card number is the member id at the bottom right corner of the card." %>
  </fieldset>
  <fieldset>
    <legend>Next of kin</legend>
    <%= f.text_field :next_of_kin_name %>
    <%= f.text_field :next_of_kin_tlf %>
  </fieldset>
  <fieldset>
    <legend>Allergies</legend>
    <%= f.check_box :vegetarian %>
    <%= f.check_box :lactose_allergy %>
    <%= f.check_box :gluten_allergy %>
    <%= f.check_box :nut_allergy %>
    <%= f.check_box :fruit_allergy %>
    <%= f.text_field :other_allergy %>
  </fieldset>
  <fieldset>
    <legend>Change password</legend>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation, label: "Confirm Password" %>
</fieldset>
    <%= f.submit (@user.new_record? ? "Sign up" : "Update"), class: "primary btn" %>
<% end %>
