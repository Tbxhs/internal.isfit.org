<%= form_for(@article) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :sticky %><br />
    <%= f.check_box :sticky %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    <%= f.label :deleted %><br />
    <%= f.check_box :deleted %>
  </div>
   <div class="field">
    <%= f.label :article_image %><br />
    <%= f.file_field :article_image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
